@model Pie

    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="card mb-3">
            <img src="@Model.ImageThumbnailUrl" alt="" />
            <div class="caption card-body">
                <h3 class="float-right">@Model.Price.ToString("C")</h3>
                <h3>
                    <a asp-controller="Pie" asp-action="Details" asp-route-id="@Model.PieId">@Model.Name</a>
                </h3>
                <p>@Model.ShortDescription</p>
            </div>
            <div class="addToCart">
                <p class="btn">
                    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pieId="@Model.PieId">Add to Cart</a>
                </p>
            </div>
        </div>
    </div>