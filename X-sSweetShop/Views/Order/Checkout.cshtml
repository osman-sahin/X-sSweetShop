@model Order

<form asp-action="Checkout" method="post" role="form">
    <h4>You're just one step away from your delicious sweets.</h4>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label" asp-for="LastName"></label>
        <div class="col-md-5">
            <input asp-for="LastName" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label" asp-for="FirstName"></label>
        <div class="col-md-5">
            <input asp-for="FirstName" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label" asp-for="AddressLine1"></label>
        <div class="col-md-5">
            <input asp-for="AddressLine1" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label" asp-for="AddressLine2"></label>
        <div class="col-md-5">
            <input asp-for="AddressLine2" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label" asp-for="ZipCode"></label>
        <div class="col-md-5">
            <input asp-for="ZipCode" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label" asp-for="City"></label>
        <div class="col-md-5">
            <input asp-for="City" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label" asp-for="State"></label>
        <div class="col-md-5">
            <input asp-for="State" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label" asp-for="Country"></label>
        <div class="col-md-5">
            <input asp-for="Country" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label" asp-for="PhoneNumber"></label>
        <div class="col-md-5">
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label" asp-for="Email"></label>
        <div class="col-md-5">
            <input asp-for="Email" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-md-2 col-md-5">
            <input type="submit" value="Complete Order" class="btn btn-info" />
        </div>
    </div>
</form>